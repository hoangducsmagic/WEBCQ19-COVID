		{{> patientNavP}}
		<div class="container">
			<div class="row justify-content-center mt-3">
				<h1>Trả nợ</h1>
			</div>

			<div class="row justify-content-center mx-auto mt-3">
				<form id="payoffDebtForm" class="">
					<div>
						<label>Số tiền đang nợ: 100000đ</label>
					</div>
					<div>
						<label>Số dư hiện tại: 50000đ</label>
					</div>
					<div>
						<label>Ngày đáo hạn: 1-1-2022</label>
					</div>

					<div class="form-group mt-3">
						<label for="amountInput">Trả nợ:</label>
						<input
							type="number"
							class="form-control"
							id="amountInput"
							name="amountInput"
							aria-describedby="emailHelp"
							placeholder="Nhập số tiền "
						/>
					</div>

					<button
						type="button"
						class="btn btn-success"
						data-toggle="modal"
						data-target="#exampleModal"
					>
						+ Nạp tiền trả nợ
					</button>
				</form>
			</div>

			<div class="row justify-content-center">
				<div class="alert alert-danger" role="alert">Báo lỗi here</div>
			</div>

			<div class="row">
				<!-- Modal popup xác nhận nạp tiền -->
				<div
					class="modal fade"
					id="exampleModal"
					tabindex="-1"
					aria-labelledby="exampleModalLabel"
					aria-hidden="true"
				>
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">
									Xác nhận nạp tiền
								</h5>
								<button
									type="button"
									class="close"
									data-dismiss="modal"
									aria-label="Close"
								>
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								Bạn có chắc chắn muốn nạp số tiền đã nhập?
							</div>
							<div class="modal-footer">
								<button
									type="button"
									class="btn btn-secondary"
									data-dismiss="modal"
								>
									Hủy
								</button>
								<button
									type="submit"
									form="payoffDebtForm"
									class="btn btn-success"
								>
									Chắc chắn
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>