		{{> patientNavP}}
		<div class="container">
			<div class="row justify-content-center mt-3">
				<h1>Nạp tiền</h1>
			</div>
			<div class="row justify-content-center mx-auto w-50 mt-3">
				<form id="addFundForm" method="post" action="/patientUser/charge">
					<div class="form-group">
						<label for="amountInput">Số tiền</label>
						<input
							type="number"
							class="form-control"
							id="amountInput"
							name="amountInput"
							aria-describedby="emailHelp"
							placeholder="Nhập số tiền cần nạp"
						/>
					</div>
					<button
						type="button"
						class="btn btn-success"
						data-toggle="modal"
						data-target="#exampleModal"
					>
						+ Nạp tiền
					</button>
				</form>
			</div>
			<div class="row">
				<!-- Modal -->
				<div
					class="modal fade"
					id="exampleModal"
					tabindex="-1"
					aria-labelledby="exampleModalLabel"
					aria-hidden="true"
				>
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">
									Xác nhận nạp tiền
								</h5>
								<button
									type="button"
									class="close"
									data-dismiss="modal"
									aria-label="Close"
								>
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								Bạn có chắc chắn muốn nạp số tiền đã nhập?
							</div>
							<div class="modal-footer">
								<button
									type="button"
									class="btn btn-secondary"
									data-dismiss="modal"
								>
									Hủy
								</button>
								<button
									type="submit"
									form="addFundForm"
									class="btn btn-success"
								>
									Chắc chắn
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>