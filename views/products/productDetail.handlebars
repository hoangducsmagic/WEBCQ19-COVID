{{> manageNavP}}
{{Product_ID}}
	<div class="container">
			<div class="row">
				<div class="col-8">
                    <div>
					<form class="form-inline my-2" action="/products" method="get">
						<input
							class="form-control mr-sm-2 w-75"
							type="search"
                            name="s"
							placeholder="Tìm kiếm nhu yếu phẩm"
							aria-label="Search"
						/>
						<button class="btn btn-outline-success my-2 my-sm-0" type="submit">
							Tìm kiếm
						</button>
					</form>
                    </div>
                </div>
			</div>
            {{#if doNot}}
            <div class="row">
                <div class="col text-center">
                    <h1>Không tìm thấy sản phẩm</h1>
                </div>
            </div>
            {{else}}
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <img class="d-block w-100" id="img" name="img" src="{{product.Images}}">
                    </div>
                    <div class="row py-2">
                        {{#each product.Images}}
                        <div class="col">
                            <img class="d-block w10" onmouseenter="setImage('{{this}}')" src="{{this}}">
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="col-md">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{product.Name}}</h5>
                            <p class="card-text">{{product.Price}}vnđ</p>
                            <p class="card-text">{{product.Quantitative}}</p>
                            <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
		</div>
<script src='/js/product/script.js'></script>