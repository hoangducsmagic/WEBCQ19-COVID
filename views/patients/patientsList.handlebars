{{> manageNavP}}
	<div class="container">
			<div class="row">
				<div class="col-8">
					<form class="form-inline my-2">
						<input
							class="form-control mr-sm-2 w-75"
							type="search"
							placeholder="Tìm kiếm bệnh nhân"
							aria-label="Search"
						/>
						<button class="btn btn-outline-success my-2 my-sm-0" type="submit">
							Tìm kiếm
						</button>
					</form>
				</div>
				<div class="col-4 text-center my-2">
					<button type="button" class="btn btn-success">
						+ Thêm bệnh nhân
					</button>
				</div>
			</div>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Họ tên</th>
						<th scope="col">Trạng thái</th>
						<th scope="col">Nơi đang điều trị</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{{#each patients}}
					<tr>
						<th scope="row">{{this.patientId}}</th>
						<td>{{this.patientName}}</td>
						<td>F{{this.patientStatus}}</td>
						<td>{{this.facilityName}}</td>
						<td class="text-center">
							<button type="button" class="btn btn-primary">Chi tiết</button>
						</td>
						<td class="text-center">
							<button type="button" class="btn btn-warning">Chỉnh sửa</button>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
