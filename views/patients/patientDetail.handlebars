{{> manageNavP}}
		<div class="container">
			<div class="row mt-3 justify-content-center">
				<h2>Thông tin bệnh nhân</h2>
			</div>
			<div class="row my-3">
				<div class="col-4"></div>
				<div class="col-2">
					<h6>Họ tên:</h6>
					<h6>CMND:</h6>
					<h6>Năm sinh:</h6>
					<h6>Địa chỉ:</h6>
					<h6>Trạng thái hiện tại:</h6>
					<h6>Nơi đang điều trị:</h6>
				</div>
				<div class="col-4">
					<h6>{{patientName}}</h6>
					<h6>{{patientCitizenId}}</h6>
					<h6>{{patientBirthday}}</h6>
					<h6>{{wardName}}, {{districtName}}, {{provinceName}}</h6>
					<h6>F{{patientStatus}}</h6>
					<h6>{{facilityName}}</h6>
				</div>
				<div class="col-3"></div>
			</div>
			<div class="row mb-3">
				<h3>Danh sách người liên đới</h3>
			</div>
			<div class="row justify-content-center">
				<table class="table w-75">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Họ tên</th>
							<th scope="col">Trạng thái</th>
							<th scope="col">Nơi đang điều trị</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						{{#each relatedList}}
						<tr>
							<th scope="row">{{this.patientId}}</th>
							<td>{{this.patientName}}</td>
							<td>F{{this.patientStatus}}</td>
							<td>{{this.facilityName}}</td>
							<td class="text-center">
								<a href="/patients/detail/{{this.patientId}}">
									<button type="button" class="btn btn-primary">Chi tiết</button>
								</a>
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>