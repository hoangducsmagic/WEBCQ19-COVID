{{> manageNavP}}
		<div class="container">
			<div class="row justify-content-center mt-3">
				<h1>Nạp tiền</h1>
			</div>
			<div class="row justify-content-center mx-auto w-50 mt-3">
				<form id="addFundForm" method="post" action="/patients/changeDueDay">
					<div class="form-group">
						<label for="amountInput">Hạn mức thanh toán hiện tại (số ngày): </label>
						<input
							type="number"
							class="form-control"
							id="amountInput"
							name="dayInput"
							aria-describedby="emailHelp"
							placeholder="Nhập số ngày nợ"
							value="{{currentDueDay}}"
							min="1"
							required
						/>
					</div>
					<button
						type="button"
						class="btn btn-success"
						data-toggle="modal"
						data-target="#exampleModal"
					>
						+ Cập nhật
					</button>
					{{#if updateSuccess}}
					<div class="alert alert-success mt-3" role="alert">
  						Cập nhật thành công
					</div>
					{{/if}}
				</form>
			</div>
			<div class="row">
				<!-- Modal -->
				<div
					class="modal fade"
					id="exampleModal"
					tabindex="-1"
					aria-labelledby="exampleModalLabel"
					aria-hidden="true"
				>
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">
									Xác nhận thay đổi số ngày giới hạn thanh toán
								</h5>
								<button
									type="button"
									class="close"
									data-dismiss="modal"
									aria-label="Close"
								>
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								Bạn có chắc chắn muốn cập nhật số ngày giới hạn thanh toán?
							</div>
							<div class="modal-footer">
								<button
									type="button"
									class="btn btn-secondary"
									data-dismiss="modal"
								>
									Hủy
								</button>
								<button
									type="submit"
									form="addFundForm"
									class="btn btn-success"
								>
									Chắc chắn
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>